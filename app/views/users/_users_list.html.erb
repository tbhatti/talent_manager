<div id="container-candidate-list-heading" ><legend>List of Candidates</legend> </div>
<div id ="container-filters">
  <%= render 'users/filter_form' %>
</div>
<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Role</th>
    <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= "#{user.name}" %></td>
        <td><%= user.email%></td>
        <td><%= user.role%></td>

        <td><%= button_tag raw("<i class='icon-eye-open'></i>"),:class=>"js-candidate-details btn btn-small",  :user_id=>"#{user.id}"%></td>
         <!--td><%#= button_tag 'Show', :class=>"js-candidate-details", :user_id=>"#{user.id}"%></td-->
        <td><%= link_to raw("<i class='icon-edit'></i>") , edit_user_path(user) ,:class => "btn btn-small"%></td>
        <td><%= link_to raw("<i class='icon-trash'></i>"), user, :method => :delete, :confirm => "Are you sure?", :class => "btn btn-small" %></td>

      </tr>

  <% end %>
  </tbody>
</table>
<%#= will_paginate @users, :renderer => BootstrapPagination::Rails, :previous_label => '<<', :next_label => '>>' %>