<table class="table table-striped table-bordered">
  <% @comments.each do |comment| %>
      <%if !comment.name.nil?%>
      <tr>
        <td><%= comment.comment %></td>
        <td><%= relative_time(comment.name,comment.created_at) %></td>
        <td><%= link_to raw("<i class='icon-trash'></i>"), comment, :method => :delete, :confirm => "Are you sure?", :class => "btn btn-small" %></td>

      </tr>
  <% end %>
  <% end %>
</table>
<div id="container-comment-form">
  <%= form_for :comment,:remote =>true, :url=>url_for(:controller=>"home", :action=>"add_comment") do |f| %>
      <%= f.hidden_field :user_id, :value => "#{@user.id}" %>
      <div class="row" >
        <div class="span12">
          <div class="well" style="height: 180px;">
            <div class="pull-left" style="width: auto; margin-right: 20px;">
              <div class="control-group">


                <div class="controls" style="text-align: center;">
                  <%= f.text_field :name, :class => "text", :placeholder => "Name", :class => "control-label" %>
                </div>
              </div>
              <div class="control-group">
                <div class="controls">
                  <%= f.text_area :comment, :class => "text", :cols => "50", :rows => "4", :placeholder => "Comment", :class => "control-label" %>
                </div>
              </div>
              <div class="control-group">
                <div class="controls">
                  <%= f.submit "Post",  :class => "btn btn-danger btn-small" %>
                </div>
              </div>

            </div>

          </div>
        </div>
      </div>
  <% end %>
  </div>

