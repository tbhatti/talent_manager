<%= form_for :user, :method => "post", :url => url_for(:controller => "users", :action => "create") do |f| %>
    <%= f.hidden_field :password, :value => "helloworld" %>
    <%= f.hidden_field :password_confirmation, :value => "helloworld" %>
    <div class="row">
      <div class="span12">
        <div class="well" style="height: 250px;">
          <legend>Candidate Details</legend>
          <div class="pull-left" style="width: auto; margin-right: 20px;">
            <div class="control-group">
              <label class="control-label">Industry</label>

              <div class="controls">
                <%= f.text_field "address[industry]" %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Country</label>

              <div class="controls">
                <%= f.text_field "address[country]" %>
              </div>
            </div>
            <div class="control-group">
              <div class="controls">
                <%= f.submit "Upload CV", :class => "btn btn-large btn-danger" %>
              </div>
            </div>
          </div>
          <div class="pull-left" style="width: auto; margin-right: 20px;">
            <div class="control-group">
              <label class="control-label">State</label>

              <div class="controls">
                <%= f.text_field "address[state]" %>
              </div>
            </div>
            <div class="control-group">
              <div class="controls">
                <label class="control-label">Your CV</label>
                <%= f.file_field :resume, :class => "input-small" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>