<div id="container-main-login">
  <div id="container-header-login">
    <div id="container-heading"><span id="span">Sign in</span></div>
    <div id="container-login-controlls">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <div class="row">
            <div class="span4">
              <div class="well" style="height: 250px;">
                <div class="pull-left" style="width: auto; margin-right: 20px;">
                  <div class="control-group">
                    <label class="control-label">Email</label>
                    <div class="controls">
                      <%= f.email_field :email, :autofocus => true %>
                    </div>
                  </div>
                  <div class="control-group">
                    <label class="control-label">Password</label>

                    <div class="controls">
                      <%= f.password_field :password %>
                    </div>
                  </div>

                  <div class="control-group">
                    <% if devise_mapping.rememberable? -%>
                        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
                    <% end -%>

                    <div><%= f.submit "Sign in" , :class=>"btn btn-danger" %></div>
                  </div>

                  <div class="control-group">
                    <%= render "devise/shared/links" %>
                  </div>
                </div>

              </div>
            </div>

          </div>

      <% end %>
    </div>
    </div></div></div>

