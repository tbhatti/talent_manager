  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

# For handling Error
gem 'haml'
gem 'capistrano', '~> 3.1.0' , :group => :production
gem 'capistrano-rails', '~> 1.1.0' , :group => :production
gem 'capistrano-bundler' , :group => :production
gem 'capistrano-rbenv', "~> 2.0", :group => :production
gem 'unicorn', group: :production
